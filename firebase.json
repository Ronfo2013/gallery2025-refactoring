{
  "auth": {},
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs20"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9109
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5011
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8090
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9209
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4010
    }
  }
}
