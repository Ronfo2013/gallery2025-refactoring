rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // üîí HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/superadmins/$(request.auth.uid));
    }
    
    function isBrandOwner(brandId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/superusers/$(request.auth.uid)) &&
             (
               get(/databases/$(database)/documents/superusers/$(request.auth.uid)).data.brandId == brandId ||
               (
                 "brandIds" in get(/databases/$(database)/documents/superusers/$(request.auth.uid)).data &&
                 brandId in get(/databases/$(database)/documents/superusers/$(request.auth.uid)).data.brandIds
               )
             );
    }
    
    // ============================================
    // üÜï MULTI-BRAND RULES (MVP)
    // ============================================
    
    // Superusers collection
    match /superusers/{userId} {
      // Un utente pu√≤ sempre leggere il proprio profilo. SuperAdmin pu√≤ leggere tutto.
      allow read: if (isAuthenticated() && request.auth.uid == userId) || 
                     exists(/databases/$(database)/documents/superadmins/$(request.auth.uid));
      
      // Permetti creazione se √® un SuperAdmin O se l'utente sta creando il proprio profilo
      allow create: if exists(/databases/$(database)/documents/superadmins/$(request.auth.uid)) ||
                       (isAuthenticated() && request.auth.uid == userId);
      
      // Solo SuperAdmin pu√≤ aggiornare/eliminare
      allow update, delete: if exists(/databases/$(database)/documents/superadmins/$(request.auth.uid));
    }
    
    // ============================================
    // üîê SUPERADMIN RULES
    // ============================================
    
    // Platform settings
    match /platform_settings/{document} {
      // landing_page √® leggibile pubblicamente
      allow read: if document == 'landing_page' || isSuperAdmin();
      
      // Scrittura solo per SuperAdmin
      allow write: if isSuperAdmin();
    }
    
    // SuperAdmins collection
    match /superadmins/{adminId} {
      // IMPORTANTE: Permetti la lettura se √® il proprio documento per evitare ricorsione in isSuperAdmin()
      allow read: if (isAuthenticated() && request.auth.uid == adminId) || isSuperAdmin();
      
      // Solo un SuperAdmin pu√≤ aggiungere altri admin
      allow write: if isSuperAdmin();
    }
    
    // Activity logs
    match /activity_logs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    
    // Brands - Multi-tenant access control
    match /brands/{brandId} {
      // Lettura: brand pubblici OR brand owner OR superadmin
      // Se isPublic non esiste, lo trattiamo come false (privato)
      allow read: if (resource != null && resource.data.get('isPublic', false) == true) || 
                     isBrandOwner(brandId) || 
                     isSuperAdmin();

      // Scrittura: solo brand owner o superadmin
      allow write: if isBrandOwner(brandId) || isSuperAdmin();

      match /albums/{albumId} {
        // Lettura: album pubblici OR brand owner OR superadmin
        allow read: if (resource != null && resource.data.get('isPublic', false) == true) || 
                       isBrandOwner(brandId) || 
                       isSuperAdmin();

        // Scrittura: solo brand owner o superadmin
        allow write: if isBrandOwner(brandId) || isSuperAdmin();
      }

      match /settings/{settingsId} {
        // Lettura: brand owner o superadmin
        allow read: if isBrandOwner(brandId) || isSuperAdmin();

        // Scrittura: solo brand owner o superadmin
        allow write: if isBrandOwner(brandId) || isSuperAdmin();
      }
    }
    
    // ============================================
    // üîô LEGACY RULES (da migrare)
    // ============================================
    
    // Regole per la collection 'gallery' (sistema vecchio)
    match /gallery/{document} {
      // Permetti lettura pubblica (legacy support)
      allow read: if true;

      // Permetti la creazione del config iniziale se non esiste, 
      // altrimenti solo SuperAdmin pu√≤ scrivere.
      allow create: if isSuperAdmin() || 
        (document == 'config' && !exists(/databases/$(database)/documents/gallery/config));
      
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
  }
}
