# ðŸ”§ TEMPLATE PER AMBIENTE LOCALE
# Copia questo file come .env.local e compila con i tuoi valori

# ==========================================
# Ambiente
# ==========================================
NODE_ENV=development

# ==========================================
# Firebase Emulators (per sviluppo locale)
# ==========================================
VITE_FIREBASE_USE_EMULATOR=true
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# ==========================================
# Firebase Configuration (copia da .env.production)
# ==========================================
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# ==========================================
# Gemini API (per proxy locale)
# ==========================================
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_gemini_api_key_here

# ==========================================
# URLs per sviluppo
# ==========================================
VITE_APP_URL=http://localhost:3000
VITE_CUSTOM_DOMAIN=localhost:3000

# ==========================================
# Debug
# ==========================================
DEBUG=true
VERBOSE_LOGGING=true









