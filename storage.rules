rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // ðŸ”’ HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isBrandOwner(brandId) {
      return isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/superusers/$(request.auth.uid)) &&
        firestore.get(/databases/(default)/documents/superusers/$(request.auth.uid)).data.brandId == brandId;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/superadmins/$(request.auth.uid));
    }
    
    // ============================================
    // ðŸ†• MULTI-BRAND STORAGE RULES (MVP)
    // ============================================
    
    // Brand-specific files (/brands/{brandId}/)
    match /brands/{brandId}/{allPaths=**} {
      // Lettura pubblica (gallery e assets pubblici)
      allow read: if true;
      
      // Scrittura per owner del brand o SuperAdmin
      allow write: if isBrandOwner(brandId) || isSuperAdmin();
      
      // Delete per owner del brand o SuperAdmin
      allow delete: if isBrandOwner(brandId) || isSuperAdmin();
    }
    
    // ============================================
    // ðŸ”™ LEGACY STORAGE RULES (da migrare)
    // ============================================
    
    // Regole per uploads legacy (sistema vecchio)
    match /uploads/{allPaths=**} {
      // Permetti lettura pubblica
      allow read: if true;
      
      // Permetti scrittura (temporaneo - da rimuovere dopo migrazione)
      allow write: if true;
    }
    
    // Config legacy
    match /config/{allPaths=**} {
      allow read: if true;
      allow write: if true; // Temporaneo
    }

    // Landing page assets (hero/background, branding uploads)
    match /platform/landing/{allPaths=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
  }
}
